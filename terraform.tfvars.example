# AWS Configuration
region = "us-west-2"
profile = "cdk-usr"

# EKS Cluster Configuration
cluster_name    = "my-eks-cluster"
cluster_version = "1.31"

# Node Group Configuration
node_ami_type           = "AL2023_ARM_64_STANDARD"  # Options: AL2023_x86_64_STANDARD, AL2023_ARM_64_STANDARD, AL2_x86_64, AL2_ARM_64, BOTTLEROCKET_x86_64, BOTTLEROCKET_ARM_64
node_instance_types     = ["t4g.medium"]
node_group_min_size     = 1
node_group_max_size     = 3
node_group_desired_size = 1
node_disk_size          = 20

# Optional: EC2 Key Pair for SSH access to nodes
# key_pair_name = "my-key-pair"